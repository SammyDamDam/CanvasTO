<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/yesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textSize="25sp"
        android:layout_marginEnd="28dp"
        android:layout_below="@+id/confirmation_text"
        android:layout_toStartOf="@+id/noBtn"
        android:layout_marginTop="23dp" />

    <Button
        android:id="@+id/noBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:textSize="25sp"
        android:layout_marginEnd="98dp"
        android:layout_alignBaseline="@+id/yesBtn"
        android:layout_alignBottom="@+id/yesBtn"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/confirmation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Will you go through with this transaction?"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>